
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Search</h1>

<form asp-action="SearchByRange">
    <input type="text" name="txtStartRange" placeholder="Enter Min" />
    <input type="text" name="txtEndRange" placeholder="Enter Max" />
    <input type="submit" value="Search" class="btn btn-primary" />
</form>
<br/>
<hr/>
@if (ViewData["courses"] != null)
{
    <table class="table">
    <thead>
        <tr>
            <th>
                Course Id
            </th>
            <th>
               Course Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (List<MyCourse>)ViewData["courses"])
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
            </tr>
        }
    </tbody>
</table>
}